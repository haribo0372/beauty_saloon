CREATE TABLE staff                                           /*создание таблицы №2*/
(
    id_worker int PRIMARY KEY,
    fl_name text NOT NULL,
    adresss text NOT NULL,
    age int NOT NULL,
    post text NOT NULL,
    pay_₽ integer NOT NULL,
    fk_services_id integer REFERENCES services(services_id) NOT NULL
);


