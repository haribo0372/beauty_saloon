DROP TABLE IF EXISTS one_to_many_offices_and_services; /* блок удаления таблиц , если они существуют в БД*/
DROP TABLE IF EXISTS one_to_many_offices_and_staff;
DROP TABLE IF EXISTS offices;
DROP TABLE IF EXISTS staff;
DROP TABLE IF EXISTS services;
DROP TABLE IF EXISTS business_partners;



CREATE TABLE services                                   /*создание таблицы №1*/
(
    services_id integer PRIMARY KEY,
    name_services text NOT NULL,
    aver_time time NOT NULL,
    aver_price_₽ integer NOT NULL
);

